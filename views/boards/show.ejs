<%- include('../partials/head') %>
    <%- include('../partials/navbar') %>

        <h1>All Tasks</h1>
        <ol>
            <% for (let task of filteredTasks) { %>
                <li>
                    <a href="/boards/task/<%= task._id %>">
                        <%= task.text %>
                    </a>

                </li>
                <% } %>

        </ol>

        <a class="btn btn-primary" role="button" aria-disabled="true"
            href="/boards/newtask?board=<%= encodeURIComponent(filteredTasks[0].boardName) %>">Add New Task</a>


