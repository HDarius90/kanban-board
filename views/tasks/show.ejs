<% layout('/layouts/boilerplate') %>
    <%- include('../partials/navbar') %>


    <b>Task name: </b><%= task.text %><br>
    <b>Task state: </b><%= task.state %><br>
    <b>Task priority: </b><%= task.priority %><br>
    <b>Task deadline: </b><%= task.deadline %><br>


    <a href="/boards?boardName=<%= task.boardName %>">Back</a>
    <a href="/boards/task/<%= task._id %>/edit">Edit</a>
    <form action="/boards/task/<%= task._id %>?boardName=<%= task.boardName %>&_method=DELETE" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>




